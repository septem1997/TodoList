/**页面切换动画效果*/
.page-enter-active, .page-leave-active {
  transition: opacity .3s;
}
.page-enter, .page-leave-active {
  opacity: 0;
}

html {
  box-sizing: border-box;
  background: white;
  color #222222
}

*, *:before, *:after {
  box-sizing: border-box;
  margin: 0;
}

@media screen and (min-width: 320px) {
  html, body {
    font-size: 16px;
  }
}


@media screen and (min-width: 1024px) {
  html, body {
    font-size: 24px;
  }
}
:root {
  --mainColor: #2176ff;
  --gray: #E5E5E5
}

.kyyInput{
  border none
  width 100%
  border-bottom 1px solid var(--gray)
  transition all 500ms
  padding-bottom calc(0.875rem + 1px)
  padding-top 0.875rem
  padding-left 1px
  position relative
  &:focus{
    padding-bottom 0.875rem
    border-bottom 2px solid var(--mainColor)
  }
}

.kyyButton{
  width 100%
  height 2.75rem
  cursor pointer
  color white
  border-radius 1.25rem
  border none
  position relative
  box-shadow:0 0.1875rem 0.5rem 0.125rem rgba(33,118,255,0.2)
  background var(--mainColor)
  &::before {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background-color: #000;
    border: inherit;
    border-color: #000;
    border-radius: inherit;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    opacity: 0;
    content: ' ';
  }
  &:active{
    &:before{
      opacity 0.1
    }
  }
}


